        function convertTamil() {
            const input = document.getElementById('tamilInput').value;
            let output = '';

            for (let i = 0; i < input.length; i++) {
                const char = input[i];
                const nextChar = i + 1 < input.length ? input[i + 1] : '';
                const twoChars = char + nextChar;

                if (tamilToRomanized[twoChars]) {
                    output += tamilToRomanized[twoChars];
                    i++; // Skip next character
                } else if (tamilToRomanized[char]) {
                    output += tamilToRomanized[char];
                } else {
                    output += char; // Preserve everything else (spaces, line breaks, punctuation)
                }
            }

            document.getElementById('romanizedOutput').value = output;
            updateStats();
        }

        function clearAll() {
            document.getElementById('tamilInput').value = '';
            document.getElementById('romanizedOutput').value = '';
            updateStats();
        }

        function copyToClipboard() {
            const output = document.getElementById('romanizedOutput');
            output.select();
            document.execCommand('copy');
            const btn = document.querySelector('.copy-btn');
            const original = btn.textContent;
            btn.textContent = 'Copied!';
            setTimeout(() => btn.textContent = original, 2000);
        }

        function updateStats() {
            const input = document.getElementById('tamilInput').value;
            document.getElementById('charCount').textContent = input.length;
            document.getElementById('wordCount').textContent = input.trim() ? input.trim().split(/\s+/).length : 0;
            document.getElementById('lineCount').textContent = input ? input.split('\n').length : 0;
        }

        document.getElementById('tamilInput').addEventListener('input', updateStats);
        updateStats();
    </script>
